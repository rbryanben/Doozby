<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circular Transparent Button -->
    <declare-styleable name="CircularTransparentButton">
        <attr name="text" format="string"/>
        <attr name="animate" format="boolean"/>
    </declare-styleable>

    <!-- Body Button -->
    <declare-styleable name="BodyButton">
        <attr name="body_button_text" format="string"/>
        <attr name="body_button_enabled" format="boolean"/>
    </declare-styleable>

    <!-- Body Input -->
    <declare-styleable name="BodyInput">
        <attr name="body_input_hint" format="string"/>
        <attr name="body_input_is_password" format="boolean"/>
    </declare-styleable>

    <!-- DSTV Button -->
    <declare-styleable name="DSTVButton">
        <attr name="dstv_button_text" format="string"/>
        <attr name="dstv_button_icon" format="integer"/>
    </declare-styleable>
</resources>